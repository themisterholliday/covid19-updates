    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.7",
    "postcss": "^7.0.35",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "pug": "2.0.0-beta11",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.3"
  }
}
